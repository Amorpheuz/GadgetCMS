                                        <div class="col-sm-12">
                                            <h6 class="font-weight-bold"><a asp-page="../Article/Details" asp-route-id="@item.ArticleId">@item.ArticleName</a></h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
