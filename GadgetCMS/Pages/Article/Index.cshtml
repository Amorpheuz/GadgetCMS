                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 d-flex justify-content-center">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @{
                                                var base64 = Convert.ToBase64String(item.ArticlePictures.First().ArticlePictureBytes);
                                                var imgSrc = $"data:image/gif;base64,{base64}";
                                            }
