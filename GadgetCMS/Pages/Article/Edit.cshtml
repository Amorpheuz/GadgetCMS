@page
@model GadgetCMS.Pages.Article.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.ArticleId" />
            <div class="form-group">
                <label asp-for="Article.ArticleName" class="control-label"></label>
                <input asp-for="Article.ArticleName" class="form-control" />
                <span asp-validation-for="Article.ArticleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleCreated" class="control-label"></label>
                <input asp-for="Article.ArticleCreated" class="form-control" />
                <span asp-validation-for="Article.ArticleCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleContent" class="control-label"></label>
                <input asp-for="Article.ArticleContent" class="form-control" />
                <span asp-validation-for="Article.ArticleContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleAuthor" class="control-label"></label>
                <input asp-for="Article.ArticleAuthor" class="form-control" />
                <span asp-validation-for="Article.ArticleAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ArticleLastEditedBy" class="control-label"></label>
                <input asp-for="Article.ArticleLastEditedBy" class="form-control" />
                <span asp-validation-for="Article.ArticleLastEditedBy" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.ArticleVisible" /> @Html.DisplayNameFor(model => model.Article.ArticleVisible)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Article.ArticleEditLock" /> @Html.DisplayNameFor(model => model.Article.ArticleEditLock)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
