@page
@model GadgetCMS.Pages.Review.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.UserId" />
            <input type="hidden" asp-for="Review.ArticleId" />
            <div class="form-group">
                <label asp-for="Review.ReviewRating" class="control-label"></label>
                <input asp-for="Review.ReviewRating" class="form-control" />
                <span asp-validation-for="Review.ReviewRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.ReviewContent" class="control-label"></label>
                <input asp-for="Review.ReviewContent" class="form-control" />
                <span asp-validation-for="Review.ReviewContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.ReviewCreated" class="control-label"></label>
                <input asp-for="Review.ReviewCreated" class="form-control" />
                <span asp-validation-for="Review.ReviewCreated" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Review.ReviewVisible" /> @Html.DisplayNameFor(model => model.Review.ReviewVisible)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
