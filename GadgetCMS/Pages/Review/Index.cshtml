@page
@using GadgetCMS.Areas.Identity.Data
@model GadgetCMS.Pages.Review.IndexModel
@inject SignInManager<GadgetCMSUser> SignInManager
@inject UserManager<GadgetCMSUser> UserManager

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table-responsive table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewLastUpdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Article)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].GadgetCmsUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Review)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewRating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewLastUpdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewVisible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.ArticleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GadgetCmsUser.Email)
                </td>
                <td>
                    @if (item.UserId == UserManager.GetUserId(User))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ArticleId">Edit</a>
                        Html.DisplayText(" | ");
                    }
                    @Html.ActionLink("Details", "Details", new {/* id=item.PrimaryKey */}) |
                    @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})
                </td>
            </tr>
        }
    </tbody>
</table>
