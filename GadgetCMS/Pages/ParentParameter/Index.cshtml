@page
@model GadgetCMS.Pages.ParentParameter.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParentParameter[0].ParentParameterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentParameter[0].ParentParameterDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParentParameter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParentParameterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentParameterDescription)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ParentParameterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ParentParameterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ParentParameterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
