@page
@model GadgetCMS.Pages.Category.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDescription)
        </dd>
        <dt class="col-sm-2">
            Parent Parameters
        </dt>
        <dd class="col-sm-10">
            @foreach (var itemSub in Model.Category.CategoryParentParameters)
            {
                string PPName = Model._context.ParentParameter.Where(c => c.ParentParameterId == itemSub.ParentParameterId).Select(d => d.ParentParameterName).FirstOrDefault();
                var temp = PPName + " ";
                @temp
            }
        </dd>
        
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Category.CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../Categories">Back to List</a>
    </form>
</div>
